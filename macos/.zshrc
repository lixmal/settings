# fi

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"


# If you come from bash you might have to change your $PATH.
export PATH="/opt/homebrew/bin:$HOME/bin:$PATH"

export PATH="${PATH}:${HOME}/.krew/bin"

#export HISTFILE="$HOME/.history"
export HISTSIZE=10000000

BULLETTRAIN_PROMPT_ORDER=(
    time
    status
    custom
#    context
    dir
#    screen
#    perl
#    ruby
#    virtualenv
    nvm
#    aws
    go
    rust
#    elixir
    git
    kctx
#    hg
    cmd_exec_time
)




source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh

ZSH_HIGHLIGHT_STYLES[globbing]=fg=blue,bold
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=#9ACD32"



# eval "$(pyenv init -)"



eval "$(direnv hook zsh)"

export EDITOR=vim

export LC_ADDRESS=en_DE.UTF-8
export LC_COLLATE=en_DE.UTF-8
export LC_IDENTIFICATION=en_DE.UTF-8
export LC_MEASUREMENT=en_DE.UTF-8
export LC_MONETARY=en_DE.UTF-8
export LC_NAME=en_DE.UTF-8
export LC_NUMERIC=en_DE.UTF-8
export LC_PAPER=en_DE.UTF-8
export LC_TELEPHONE=en_DE.UTF-8
export LC_TIME=en_DE.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US:en


test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"


if type brew &>/dev/null; then
  FPATH=$(brew --prefix)/share/zsh-completions:$FPATH
fi
autoload -U +X compinit && compinit
autoload -U +X bashcompinit && bashcompinit


alias k=kubectl
alias tf=terraform


export NVM_DIR="$HOME/.nvm"
[ -s "/opt/homebrew/opt/nvm/nvm.sh" ] && \. "/opt/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm" ] && \. "/opt/homebrew/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion


[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export PATH="/opt/homebrew/opt/libpq/bin:$PATH"
